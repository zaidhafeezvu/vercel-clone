{
  "name": "vercel-clone",
  "version": "1.0.0",
  "author": "",
  "main": "index.js",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "description": "A minimal full-stack Vercel clone",
  "keywords": ["vercel", "clone", "deployment", "react", "express"],
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "cd client && bun run dev",
    "dev:server": "cd server && bun run dev",
    "build": "bun run build:client && bun run build:server",
    "build:client": "cd client && bun run build",
    "build:server": "cd server && bun run build",
    "install:all": "bun install && cd client && bun install && cd ../server && bun install"
  },
  "workspaces": [
    "client",
    "server"
  ]
}